{% extends "::base.html.twig" %}

{% block title %}Participants{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>{% block head_title %}Participants{% endblock %} <small>{% block head_small %}Gestion des participants{% endblock %}</small>

            <div class="pull-right">
                <div class="btn-group" style="">
                    <a class="btn btn-success" href="#">Ajouter</a>
                </div>
            </div>
        </h1>
    </div>
    <div class="row">
        <div class="col-md-9">
            <table id="table_participants" class="table table-bordered table-hover table-striped">
                <thead>
                <tr id="search">
                    <th class="col-md-2">Nom</th>
                    <th class="col-md-2">Prénom</th>
                    <th class="col-md-2">Email</th>
                    <th class="col-md-2">Type</th>
                    <th class="col-md-1">Used</th>
                    <th class="col-md-2">Invité par</th>
                    <th class="col-md-1"></th>
                </tr>
                </thead>
                <tbody id="participants">
                {% for participant in paticipants %}
                    <tr>
                        <td>{{ participant.lastName }}</td>
                        <td>{{ participant.firstName }}</td>
                        <td>{{ participant.email }}</td>
                        <td>{{ participant.type }}</td>
                        <td>{{ participant.used }}</td>
                        <td>{{ participant.invitedBy }}</td>
                        <td><div class="btn-group" role="group">
                                <button type="button" class="btn btn-primary">E</button>
                                <button type="button" class="btn btn-danger">D</button>
                            </div></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </div>
{% endblock %}
