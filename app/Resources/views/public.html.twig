{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1-rc.1/css/select2.min.css" rel="stylesheet"/>
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-css/1.4.6/select2-bootstrap.min.css"
          rel="stylesheet"/>
    {% include "GoogleBundle:Analytics:async_universal.html.twig" %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.1-rc.1/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('select').select2()
        });
    </script>
    <style>
        #page {
            margin-top: 20px;
            margin-bottom: 70px;
        }

        #header {
            padding: 0;
            position: relative;
            z-index: 2;
            box-shadow: 3px 0 2px rgba(0, 0, 0, 0.5);
            height: 85px;
        }

        #logo {
            transition: height 0.3s ease 0s, line-height 0.3s ease 0s;
            margin-top: 5px;
            margin-bottom: 5px;
            position: relative;
            max-height: 62px;
        }

        #logo .logo {
            margin-top: 16px;
            width: 120px;
            height: 40px;
        }

        #title-holder {
            height: 150px;
            background-color: #e8465b;

        }

        #title-holder .c {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
            width: 100%;
        }

        #title-holder h1.title {
            color: #ffffff;
            text-transform: uppercase;
            text-align: center;
            vert-align: center;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="header">
        <div class="container">
            <div id="logo" class="span4">
                <a href="http://gala.bde-insa-lyon.fr" title="GALA INSA Lyon" target="_blank">
                    <img class="logo" src="{{ asset('bundles/bderevent/images/logo_gala.png') }}" alt="Gala INSA Lyon">
                </a>
            </div>
        </div>
    </div>
    <div id="title-holder">
        <div class="bread-title-bg-image full-bg-breadimage-fixed" style="background-position: 50% 17px;"></div>
        <div class="container">
            <div style="display: table; height: 150px; overflow: hidden;width: 100%">
                <div style="display: table-cell; vertical-align: middle;width: 100%">
                    <div>
                        <h1 class="title">{% block title %}BILLETTERIE{% endblock %}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="page" class="container">
        {% include 'BraincraftedBootstrapBundle::flash.html.twig' %}
        {% block content %}{% endblock %}
    </div>

{% endblock %}